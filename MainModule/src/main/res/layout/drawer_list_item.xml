<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:padding="7.5dp">

    <com.parse.ParseImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/friendsPhoto" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:id="@+id/friendsName"
            android:layout_alignParentTop="true" android:layout_toRightOf="@+id/friendsPhoto"
            android:layout_toEndOf="@+id/friendsPhoto"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Location"
            android:id="@+id/location"
            android:layout_below="@+id/friendsName" android:layout_alignLeft="@+id/friendsName"
            android:layout_alignStart="@+id/friendsName"/>
</RelativeLayout>